{
  "name": "jmt-player",
  "version": "1.6.1",
  "description": "济民堂广告播放控制桌面客户端",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir",
    "convert-icon": "node scripts/convert-icon.js"
  },
  "author": "Coren",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.33.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.coren.jmt-player",
    "productName": "济民堂播放器",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "generic",
      "url": "https://gitee.com/coren01/JMT-Player/releases/download/latest"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "zh_CN",
        "en_US"
      ],
      "language": "2052",
      "shortcutName": "济民堂播放器",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}